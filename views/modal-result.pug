block modal-result
	#resultModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='resultModalLabel')
		.modal-dialog.modal-lg(role='document')
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') Ã—
					h2#resultModalLabel.modal-title
				.modal-body
					#correctBody.row
						.col-xs-12
							h3 Correct!

					#incorrectBody.row
						.col-xs-12
							label(for='inputBox') Input
							pre#inputBox

						.col-xs-12.col-md-6
							label(for='outputBox') Your output
							pre#outputBox
						.col-xs-12.col-md-6
							label(for='answerBox') Answer output
							pre#answerBox

					#compileErrorBody.row
						.col-xs-12
							label(for='compileErrorBox') Error message
							pre#compileErrorBox

					#runtimeErrorBody.row
						.col-xs-12
							label(for='runtimeErrorSignal') Return value of #[code main()]
							pre#runtimeErrorSignal

						.col-xs-12
							label(for='runtimeErrorBox') Error log
							pre#runtimeErrorBox

						.col-xs-12
							label(for='runtimeErrorInputBox') Input
							pre#runtimeErrorInputBox

					#timeoutBody.row
						.col-xs-12
							label(for='timeoutInputBox') Input
							pre#timeoutInputBox

					#errorBody.row
						.col-xs-12
							h3#errorBox

				.modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal')
						| #[i.fa.fa-times(aria-hidden='true')]
						| Close

	script(type='text/javascript', src='/js/modal-result.js', defer)