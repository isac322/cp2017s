doctype html

html
	head
		meta(name="google-signin-client_id", content=clientId)
		meta(name='viewport', content='width=device-width, initial-scale=1')

		// for Android
		meta(name='theme-color' content='#607d8b')
		// Windows Phone
		meta(name='msapplication-navbutton-color', content='#607d8b')
		// iOS Safari
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')

		title= title

		link(rel="stylesheet", href="/css/sticky-footer-navbar.css")

		// jquery
		script(src="/js/jquery.min.js")

		// bootstrap 3


		// Latest compiled and minified CSS
		link(rel="stylesheet", href="/css/bootstrap.min.css")
		// Latest compiled and minified JavaScript
		script(src="/js/bootstrap.min.js")

		script(src='https://apis.google.com/js/api:client.js')
		link(rel='stylesheet', href='/css/bootstrap-social.css')
		link(rel='stylesheet', href='/css/font-awesome.min.css')

		link(rel='stylesheet', href='/css/navbar-color.css')

		style.
			select {
				-moz-appearance: none;
			}

			.page-header {
				margin-top: 20px;
			}

			.vcenter {
				display: inline-block;
				vertical-align: middle;
				float: none;
			}

		block header

	body
		script(type='text/javascript').
			_wait_for_gapi_attached = []
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/')
						b=shortName
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(class=navPos == 2 ? 'active' : undefined)
							a(href='/homework') Homework
						if signIn
							li(class=navPos == 3 ? 'active' : undefined)
								a(href='/exercise') Exercise
							li(class=navPos == 4 ? 'active' : undefined)
								a(href='/project') Project
							li(class=navPos == 5 ? 'active' : undefined)
								a(href='/history') History
							li(class=navPos == 6 ? 'active' : undefined)
								a(href='/board') Board

					ul.nav.navbar-nav.navbar-right
						li
							a(target='_blank', href=classPage) #[span.glyphicon.glyphicon-link(aria-hidden="true")] Class Page
						if signIn
							li.dropdown(class=navPos == 99 ? 'active' : undefined)
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') #{name}
									span.caret
								ul.dropdown-menu
									li
										a(href='/profile') #[i.fa.fa-user(aria-hidden='true')] Profile
									li.divider(role='separator')
									li
										a(href='#', onclick='signOut();') #[span.fa.fa-sign-out(aria-hidden="true")] Sign out
						else
							li
								a#login-anchor(href='#') #[i.fa.fa-google(aria-hidden="true")] Sign In
								script(type='text/javascript').
									_wait_for_gapi_attached.push(document.getElementById('login-anchor'))

		.container
			block content
		script(src='/js/identificator.js')

		footer.footer
			.container
				address.text-muted.col-xs-12.col-sm-4.col-md-3
					strong Assistants
					each assistant in assistants
						br
						a(href='mailto:' + assistant)=assistant
				address.text-muted.col-xs-12.col-sm-4.col-md-3
					strong DSCLAB
					br
					a(target='_blank', href='http://dcslab.snu.ac.kr/') http://dcslab.snu.ac.kr/
				address.text-muted.col-xs-12.col-sm-4.col-md-3
					strong Web Manager
					br
					a(href='mailto:' + webManager)=webManager